<div class="container">
    <div class="row">
        {{#data}}

        <div class="col-md-4">
            <div class="card">
                <div id="carousel{{ _id }}" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {{#each gallery}}
                        {{#if @first }}
                        <div class="carousel-item active">
                            <img src="/{{this}}" class="d-block w-100" alt="Gambar">
                        </div>
                        {{/if}}
                        <div class="carousel-item">
                            <img src="/{{this}}" class="d-block w-100" alt="Gambar">
                        </div>
                        {{/each}}
                        {{!-- <div class="carousel-item">
                            <img src="/{{gallery}}" class="d-block w-100" alt="Gambar">
                        </div>
                        <div class="carousel-item">
                            <img src="/{{gallery}}" class="d-block w-100" alt="Gambar">
                        </div> --}}
                    </div>
                    <a class="carousel-control-prev" href="#carousel{{ _id }}" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel{{ _id }}" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                {{!-- <img src="/{{gallery}}" class="card-img-top" alt="..."> --}}
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text pb-2">{{formatprice price}}</p>
                    <a href="/product/catalog/{{_id}}" class="btn btn-primary">Beli Sekarang</a>
                </div>
            </div>
        </div>
        {{/data}}
    </div>
</div>