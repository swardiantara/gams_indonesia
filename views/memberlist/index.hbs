<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">{{{title}}}</h6>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nama</th>
                                <th>License</th>
                                <th>Team Member</th>
                                <th>No. Rekening</th>
                                <th>Commission</th>
                                <th colspan="2" class="text-center">Activity</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each data}}
                            <tr>
                                <th><a href="/membership/edit/{{_id}}">{{fullName}}</a></th>
                                <td>{{license}}</td>
                                <td>{{downline.length}}</td>
                                <td>{{bankNumber}}</td>
                                <td>{{komisi}}</td>
                                <td>
                                    {{#each license}}
                                    {{this.name}}
                                    {{/each}}
                                </td>
                                <td><a href="/membership/delete/{{_id}}" class="text-danger">View Team</td>
                                <td><a href="/membership/delete/{{_id}}" class="text-danger">View Profile</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>