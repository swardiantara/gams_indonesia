                        </div> --}}
                    </div>
                    <a class="carousel-control-prev" href="#carousel{{ _id }}" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel{{ _id }}" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="/tool/rincian/{{_id}}" class="btn btn-primary btn-block">Pelajari</a>
                </div>
            </div>
