<div class="container">
    <div class="row">
        {{#data}}

        <div class="col-md-3">
            <div class="card">
                <div id="carousel{{ _id }}" class="carousel slide" data-interval="false">
                    <div class="carousel-inner">
                        {{#each gallery}}
                        {{#if @first }}
                        <div class="carousel-item active">
                            <img src="/{{this}}" class="d-block w-100" alt="Gambar">
                        </div>
                        {{/if}}
                        <div class="carousel-item">
                            <img src="/{{this}}" class="d-block w-100" alt="Gambar">
                        </div>
                        {{/each}}
