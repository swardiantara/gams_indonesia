<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">{{{title}}}</h6>
                <form class="forms-sample" method="POST" action="">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Basic" value="{{data.name}}">
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" name="description" rows="10"
                            id="editor">{{data.description}}</textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" class="form-control" name="price" placeholder="50000"
                                    value="{{data.price}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Commission</label>
                                <input type="text" class="form-control" name="commission" placeholder="30"
                                    value="{{data.commission}}">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2 btn-block">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>