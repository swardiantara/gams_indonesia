<div class="page-wrapper full-page">
    <div class="page-content d-flex align-items-center justify-content-center">

        <div class="row w-100 mx-0 auth-page">
            <div class="col-md-8 col-xl-6 mx-auto">
                <div class="card col-md-8 mx-auto">
                    <div class="row">
                        <div class="col-md pl-md-0">
                            <div class="auth-form-wrapper px-4 py-5">
                                <a href="#" class="noble-ui-logo d-block mb-2">GAMS<span>Indonesia</span></a>
                                <h5 class="text-muted font-weight-normal mb-4">Daftarkan akun Anda</h5>
                                <form class="forms-sample" method="POST" action="">
                                    <div class="form-group">
                                        <label>Nama lengkap</label>
                                        <input type="text" name="fullName" class="form-control" placeholder="Jhon Doe">
                                    </div>
                                    <div class="form-group">
                                        <label>Alamat email</label>
                                        <input type="email" name="email" class="form-control"
                                            placeholder="jhon@gmail.com">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" name="password" class="form-control"
                                            placeholder="Password">
                                    </div>
                                    <div class="form-check form-check-flat form-check-primary">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input">
                                            Dengan ini saya menyetujui ketentuan layanan
                                        </label>
                                    </div>
                                    <div class="mt-3">
                                        <button type="submit"
                                            class="btn btn-outline-primary btn-icon-text mb-2 mb-md-0">
                                            Daftar Sekarang
                                        </button>
                                    </div>
                                    <a href="/auth/login" class="d-block mt-3 text-muted">Sudah memiliki akun? Login
                                        disini</a>

                                    {{#if message}}
                                    <p class="d-block mt-3 alert alert-danger text-center">{{message}}</p>
                                    {{/if}}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>